@model List<Dal.Models.Person>
@{
    ViewBag.Title = "People";
}
<h2>@ViewBag.Title</h2>

<p>@Html.ActionLink("Create new person", "Create")</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Role)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(i => item.Name)</td>
            <td>@Html.DisplayFor(i => item.Role.Name)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>